<h2>Import data</h2>
<button class="btn btn-primary open-wizard" role="import">
    Open import wizard
</button>

<form enctype="multipart/form-data">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#sourceTab" data-toggle="tab">Source</a></li>
        <li><a href="#inputTab" data-toggle="tab">Data</a></li>
        <li><a href="#outputTab" data-toggle="tab">Destination</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane active" id="sourceTab">
            <div class="form-group">
                <label class="control-label col-xs-2" for="sourceType">Type</label>
                <div class="col-xs-10">
                    <select class="form-control" id="sourceType" name="sourceType">
                        <option>Choose</option>
                        <option>Local file</option>
                        <option>URL</option>
                        <option>Direct input</option>
                    </select>
                    <span class="help-block"><small>Choose the file from your local drive</small></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2">Content-type</label>
                <div class="col-xs-10">
                    <div class="btn-group" data-toggle="buttons">
                      <label class="btn btn-primary">
                        <input type="radio" name="type" id="option1"> JSON
                      </label>
                      <label class="btn btn-primary">
                        <input type="radio" name="type" id="option2"> CSV
                      </label>
                    </div>
                    <span class="help-block"><small>Select filetype</small></span>
                </div>
            </div>
        </div>

        <div class="tab-pane" id="inputTab">
            <div class="form-group">
                <label class="control-label col-xs-2" for="inputFile">File</label>
                <div class="col-xs-10">
                    <input type="file" class="form-control" id="inputFile" name="file" />
                    <span class="help-block"><small>Choose the file from your local drive</small></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2" for="inputUrl">URL</label>
                <div class="col-xs-10">
                    <input type="text" class="form-control" id="inputUrl" name="file" />
                    <span class="help-block"><small>Set the remote URL</small></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2" for="inputFile">Direct input</label>
                <div class="col-xs-10">
                    <textarea></textarea>
                    <span class="help-block"><small>Choose the file from your local drive</small></span>
                </div>
            </div>
        </div>

        <div class="tab-pane" id="outputTab">
            <div class="form-group">
                <label class="control-label col-xs-2" for="inputDatabase">Database</label>
                <div class="col-xs-10">
                    <input type="text" class="form-control" id="inputDatabase" placeholder="Database name" name="database" required>
                    <span class="help-block"><small>Choose the database (free format)</small></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2" for="collection">Collection</label>
                <div class="col-xs-10">
                    <input type="text" class="form-control" id="inputCollection" placeholder="Collection name" name="collection" required>
                    <span class="help-block"><small>Choose the collection (free format)</small></span>
                </div>
            </div>
        </div>
    </div>

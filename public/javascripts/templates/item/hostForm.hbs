<div class="modal-dialog">
    <div class="modal-content">

    <form class="form-horizontal">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Host details</h4>
      </div>
      <div class="modal-body">

      <ul class="nav nav-tabs">
        <li class="active"><a href="#hostConnectionTab" data-toggle="tab">Connection</a></li>
        <li><a href="#hostAuthenticationTab" data-toggle="tab">Authentication</a></li>
        <li><a href="#hostAdvancedTab" data-toggle="tab">Advanced</a></li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="hostConnectionTab">
            <div class="form-group">
                <label class="control-label col-xs-2" for="inputName">Name</label>
                <div class="col-xs-10">
                    <input type="text" class="form-control" id="inputName" placeholder="Your connection label" value="{{ name }}" required>
                    <span class="help-block"><small>Choose any name that will help you to identify this connection.</small></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2" for="inputHost">Host</label>
                <div class="col-xs-10">
                    <div class="input-group">
                        <span class="input-group-addon">mongodb://</span>
                        <input type="text" class="form-control" id="inputHost" placeholder="e.g. localhost" value="{{ host }}" required>
                    </div>
                    <span class="help-block"><small>Hostnames can be either an IP address or domain name.</small></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2" for="inputPort">Port</label>
                <div class="col-xs-10">
                    <input type="number" class="form-control" id="inputPort" placeholder="e.g. 27017" value="{{ port }}" required>
                    <span class="help-block"><small>Specify the port which the mongo server is running on.</small></span>
                </div>
            </div>
        </div>

        <div class="tab-pane" id="hostAuthenticationTab">
            <div class="form-group">
                <label class="control-label col-xs-2" for="inputUser">Username</label>
                <div class="col-xs-10">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <input type="text" class="form-control" id="inputUser" placeholder="your username" value="{{ username }}">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2" for="inputPassword">Password</label>
                <div class="col-xs-10">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                        <input type="password" class="form-control" id="inputPassword" placeholder="your password" value="{{ password }}">
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-pane" id="hostAdvancedTab">
            <div class="form-group">
                <label class="control-label col-xs-2" for="inputDefaultDatabase">Default Database</label>
                <div class="col-xs-10">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-hdd"></span></span>
                        <input type="password" class="form-control" id="inputDefaultDatabase" placeholder="database name" value="{{ defaultDatabase }}">
                    </div>
                </div>
            </div>
        </div>
      </div>

      <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <input class="btn btn-primary" name="save" type="submit" value="Save">
      </div>
      </form>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->